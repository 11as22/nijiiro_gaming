<div class="container-md">
  <h2>ジャンル一覧・追加</h2>
  <!--エラー表示-->
  <%= flash[:create_alert] %>
  <%= form_with model: @genres, url:admin_item_genres_path, metod: :post, local: true do |f| %>
  <table class="mt-5 mb-5">
    <tr>
      <td>ジャンル名(15文字以内)</td>
      <td>
        <%= f.text_field :genre, placeholder: "ジャンル名", class: "form-control" %>
      </td>
      <td><%= f.submit '新規登録', class: "btn btn-sm btn-success" %></td>
    </tr>
  </table>
  <% end %>
  <table class="table">
    <div class="row">
    <tr>
      <td>ジャンル</td>
    </tr>
      <% @genres.each do |genre| %>
    <tr>
      <td><%= genre.genre %></td>
      <td><%= link_to "編集する",edit_admin_item_genre_path(genre), class: "btn btn-success" %></td>
    </tr>
      <% end %>
    </div>
  </table>
</div>