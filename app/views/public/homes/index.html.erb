<div class="container">
  <div class="row">
    <!--ジャンル検索画面-->
    <div class="col-md-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <!--商品一覧画面-->
    <div class ="col-md-10">
      <h2><%= @genre.genre %>の検索結果</h2>
      <div class ="row ml-2">
        <p>ジャンル:<%= @genre.genre %>(全<%= @item_posts_count %>件)</p>
      </div>
      <%= render 'public/item_posts/item_post_index', item_posts: @item_posts %>
    </div>
  </div>
</div>
