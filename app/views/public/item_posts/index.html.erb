<div class="container">
  <div class="row">
    <!--ジャンル検索画面-->
    <div class="col-md-2">
      <%= render 'public/homes/genre', genres: @genres %>
    </div>
    <!--商品一覧画面-->
    <div class ="col-md-10">
      <div class ="row ml-2">
        <p>商品投稿一覧(全<%= @item_posts.count %>件)</p>
      </div>
      <% @item_posts.each do |item| %>
        <%= link_to item_post_path(item.id), class: "text-decoration-none text-dark" do %>
          <div class = "row border border-success mb-3">
            <div class ="col-md-4">
              <%= image_tag  item.get_item_image(150, 100), class: "small-image" %>
            </div>
            <div class = "col-md-8 ">
              <table>
                <th>
                  <tr>
                    <td class ="col-md-4"><h5>商品名</h5></td>
                    <td class = col-md-4><%= item.item_name %></td>
                  </tr>
                  <tr>
                    <td class ="col-md-4"><h5>ジャンル</h5></td>
                    <td class ="col-md-4"><%= item.item_genre.genre %></td>
                  </tr>
                </th>
              </table>
            </div>
          </div>
        <% end %>
      <% end %>
    </div>
  </div>
</div>
      <!--ページ選択-->
      <!--<div class = "mx-auto">-->
      <!--  <#= paginate @items %>-->
      <!--</div>-->
    </div>
  </div>